rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /posts/{documents=**} {
      allow write, read: if true;
    }

    match /users {
      allow read: if true
    }

    match /users/{userId} {
      allow update: if  request.auth != null && request.auth.uid == userId;
      allow read: if true
    }
  }
}